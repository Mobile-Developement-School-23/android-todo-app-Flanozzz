<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="secondaryText">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="lineHeight">@dimen/body_line_height</item>
    </style>

    <style name="PopUpMenuField">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textColorPrimary">?android:attr/textColor</item>
        <item name="android:textColorSecondary">?android:attr/textColorTertiary</item>
        <item name="android:textColorPrimaryInverse">?android:attr/windowBackground</item>
        <item name="android:textColorSecondaryInverse">#999999</item>
        <item name="android:colorControlNormal">#999999</item>
        <item name="android:colorControlActivated">?android:attr/colorAccent</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">?android:attr/colorForeground</item>
    </style>

</resources>